# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /api     controllers.ApplicationController.index

POST    /create            controllers.ApplicationController.create()

GET     /read/:id          controllers.ApplicationController.read(id: String)

GET     /read/:name        controllers.ApplicationController.readByName(name: String)

PUT     /update/:id        controllers.ApplicationController.update(id: String)

DELETE  /delete/:id        controllers.ApplicationController.delete(id: String)


GET  /api/github/users/:username  controllers.UserController.getUser(username: String)

POST    /createUser         controllers.UserController.createUser()

GET     /readUser/:username     controllers.UserController.readUser(username: String)

PUT     /updateUser/:username   controllers.UserController.updateUser(username: String)

DELETE  /deleteUser/:username   controllers.UserController.deleteUser(username: String)
